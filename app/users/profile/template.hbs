<div id="profile-content" class="account-block">
  <section class="login_content section-profile">
    <div class="row">
      <div class="col-md-12">
       {{#if responseMessage}}
         <div class="alert alert-success">{{responseMessage}}</div>
       {{/if}}
        <h2>Profile</h2>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="firstname">*Firstname:</label>
          {{input type="text" value=model.profile.firstName class="form-control" id="first-name" placeholder="First Name" size="80"}}
          <span class="glyphicon glyphicon-info-sign"></span>
        </div>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="lastname">*Lastname:</label>
          {{input type="text" value=model.profile.lastName class="form-control" id="last-name" placeholder="Last Name" size="80"}}
          <span class="glyphicon glyphicon-info-sign"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="form-group">
          <label for="address-line">*Address:</label>
          {{textarea value=model.profile.addressLine id="address-line"  class="form-control" rows="5" }}
          <span class="glyphicon glyphicon-info-sign"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="country-field">*Country:</label>
          {{input type="text" value=model.profile.country class="form-control" id="country-field" placeholder="Country" size="280"}}
          <span class="glyphicon glyphicon-exclamation-sign"></span>
        </div>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="city">*City:</label>
          {{input type="text" value=model.profile.city class="form-control" id="city-field" placeholder="City" size="280"}}
          <span class="glyphicon glyphicon-exclamation-sign"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="state">*State:</label>
          {{input type="text" value=stateField class="form-control" id="state-field" placeholder="City" size="280"}}
          <span class="glyphicon glyphicon-exclamation-sign"></span>
        </div>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="zipcode">*Zip Code:</label>
          {{input type="text" value=model.profile.zipcode class="form-control" id="zipcode-field" placeholder="Zip Code" size="280"}}
          <span class="glyphicon glyphicon-exclamation-sign"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="phone">*Phone:</label>
          {{input type="text" value=model.profile.mobile class="form-control" id="phone-field" placeholder="Phone" size="15"}}
          <span class="glyphicon glyphicon-phone-alt"></span>
        </div>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="email">*Email:</label>
          {{input type="email" value=model.profile.email class="form-control" id="email-field" placeholder="Email" size="80"}}
          <span class="glyphicon glyphicon-envelope"></span>
        </div>
      </div>
      <div class="col-md-12">
        <button class="btn btn_login" onClick={{action "updateProfile" model.profile }}>Update Profile</button>
      </div>
    </div>
  </section>
  <section id="profile_password" class="login_content section-profile">
    <h3>User Account</h3>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="user">Username:</label>
          {{input type="text" placeholder=model.profile.username class="form-control" id="username-field" disabled="disabled"}}
          <span class="glyphicon glyphicon-user"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="password">*Current Password:</label>
          {{input type="text" value=currentPasswordField class="form-control" id="password-field" placeholder="Current Password" size="80"}}
          <span class="glyphicon glyphicon-lock"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="password">*New Password:</label>
          {{input type="text" value=newPasswordField class="form-control" id="password-field" placeholder="New Password" size="80"}}
          <span class="glyphicon glyphicon-lock"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label for="confirm password">*Confirm Password:</label>
          {{input type="text" value=repeatPasswordField class="form-control" id="confirm-password-field" placeholder="Repeat New Password" size="80"}}
          <span class="glyphicon glyphicon-lock"></span>
        </div>
        <div class="form-group">
          <button class="btn btn_login" onClick={{action "changePassword" 1 }}>Change Password</button>
        </div>
      </div>
    </div>
  </section>
</div>

<!--/container -->


