<h1>Where do you want to send top-up?</h1>

<article class="wrapfrtopup">
  {{ww-countries allCountries=model.countries stateSetPrefix='setPrefix' }}
</article><!-- /wrapfrtopup-->

{{#if topupFound}}
  <article class="wrapfrtopup howmuch">
    <h3>How much?</h3>
    <div class="row">
      {{#each topupFound as |item index|}}
        <div class="col-md-3 col-sm-4 col-xs-6 item amount-item-{{index}}" onClick={{action "pickAndSend" index item}}>
          <div class="dollar"><input type="hidden" id="amount-topup-{{index}}" value="{{item}}">
            <div>{{topupCurrency}}<br>${{item}}</div>
          </div>
        </div>
      {{/each}}
    </div>
  </article>
{{/if}}
<div class="wrap_btn_buy">
  <button class="btn_buy_minutes btn {{btnClass}}"
          onClick={{action "sendTopup" }}>Send top-up {{phone}}</button>
</div>