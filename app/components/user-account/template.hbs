<form class="login-form" {{action 'authenticate' on='submit'}}>
    <div class="form-group">
        {{input id='login' type='email' placeholder='Username' value=login class='form-control'}}
        <span class="glyphicon glyphicon-user"></span>
    </div>
    <div class="form-group">
        {{input id='password' placeholder='Password' value=password type='password' class='form-control'}}
        <span class="glyphicon glyphicon-lock"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign In" class="btn btn_login" />
    </div>
</form>